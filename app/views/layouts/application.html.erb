<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <nav class="navbar-nav navbar-left">
          <span>Bookers</span>
        </nav>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li>
                <%= link_to user_path(current_user.id) do %><i class="glyphicon glyphicon-home"> Home</i><% end %>
              </li>
              <li>
                <%= link_to users_path do %><i class="glyphicon glyphicon-user"> Users</i><% end %>
              </li>
              <li>
                <%= link_to books_path do %><i class="glyphicon glyphicon-book">Books</i><% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %><i class="glyphicon glyphicon-log-out">logout</i><% end %>
              </li>
            <% else %>
              <li>
                <%= link_to root_path do %><i class="glyphicon glyphicon-home"> Home</i><% end %>
              </li>
              <li>
                <%= link_to home_about_path do %><i class="glyphicon glyphicon-link"> About</i><% end %>
              </li>
              <li>
                <%= link_to new_user_registration_path do %><i class="glyphicon glyphicon-edit"> sign up</i><% end %>
              </li>
              <li>
                <%= link_to new_user_session_path do %><i class="glyphicon glyphicon-log-in"> login</i><% end %>
              </li>
            <% end %>
          </ul>
        </nav>
      </div>
      </div>
    </header>
    <div class="body">
      <div class="container">
        <% if flash[:notice] %>
          <p id="flash">
          <%= flash[:notice] %>
          </p>
        <% end %>
      <%= yield %>
      </div>
    </div>
  </body>
</html>
