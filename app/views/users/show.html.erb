<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to "#{book.title}", book_path(book.id) %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h4>User info</h4>
<%= attachment_image_tag @user, :profile_image, :fill, 60, 60 %>
<div>Name
  <%= @user.name %>
</div>
<div>Introduction
  <%= @user.introduction %>
</div>
<%= link_to "edit", edit_user_path(@user) %>

<%= form_with model:@book, local:true do |f| %>
  <div class="field">
      <h4>Title</h4>
      <%= f.text_field :title %>
  </div>
  <div class="field">
      <h4>Opinion</h4>
      <%= f.text_area :body %>
  </div>
  <div class="action">
      <%= f.submit 'Create Book' %>
  </div>
<% end %>