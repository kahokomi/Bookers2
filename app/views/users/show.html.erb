<div class="row">
  <div class="col-xs-3">
    <%= render 'users/list', user:@user, book:@book %>
  </div>
  <div class="col-xs-9">
    <h1>Books</h1>
      <table class="table table-hover">
        <thead>
          <tr>
            <th colspan=1></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @user.books.each do |book| %>
            <tr>
              <td><%= attachment_image_tag @user , :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %></td>
              <td><%= link_to "#{book.title}", book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>