<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Editing Book</h1>
    <% if @book.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</h2>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
             <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= form_with model:@book, local: true do |f| %>
      <div class="field row">
        <h4>Title</h4>
        <%= f.text_field :title, class: 'col-md-12' %>
      </div>
      <div class="field row">
        <h4>Opinion</h4>
        <%= f.text_area :body, class: 'col-md-12' %>
      </div>
      <div class="action row">
        <%= f.submit('Update Book', class: 'btn btn-primary col-md-12') %>
      </div>
    <% end %>
    <%= link_to "Show", book_path(@book), class: 'editlink' %>
    |
    <%= link_to "Back", books_path, class: 'editlink' %>
  </div>
  <div class="col-md-3">
  </div>
</div>