<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to "#{book.title}", book_path(book.id) %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= form_with model:@book, local:true do |f| %>
  <div class="field">
      <h4>Title</h4>
      <%= f.text_field :title %>
  </div>
  <div class="field">
      <h4>Opinion</h4>
      <%= f.text_area :body %>
  </div>
  <div class="action">
      <%= f.submit 'Create Book' %>
  </div>
<% end %>